  {% take depth into consideration
    \hbox_set:Nn \l_tmpa_box {#2}
    \dim_set:Nn \l_tmpa_dim { \box_ht_plus_dp:N \l_tmpa_box }
    \fp_set:Nn \l_tmpa_fp  
      { 
        \fp_eval:n { min(1, \dim_ratio:nn {#1}{\l_tmpa_dim}) }
      }
    \box_scale:Nnn \l_tmpa_box {1}{\l_tmpa_fp}
    \__ztool_leave_vmode:
    \box_use:N \l_tmpa_box
  }
